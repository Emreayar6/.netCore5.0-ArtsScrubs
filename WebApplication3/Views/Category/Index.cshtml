@model List<WebApplication3.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Kategori Adı</th>
        <th class="text-center">Kategori Durumu</th>
        <th class="text-center">Ek Bilgi</th>
        <th class="text-center">Sil</th>
        <th class="text-center">Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
     <tr>
         <td class="text-center">@x.CategoryID</td>
         <td class="text-center">@x.CategoryName</td>
         <td class="text-center">@x.Status</td>
         <td class="text-center">@x.CategoryInfo</td>
         <td class="text-center"><a href="/Category/CategoryDelete/@x.CategoryID" class="btn btn-danger">Sil</a></td>
         <td class="text-center"><a href="/Category/CategoryGet/@x.CategoryID" class="btn btn-primary">Güncelle</a></td>
     </tr>
    }
    
</table>
<td><a href="/Category/CategoryAdd/" class="btn btn-success">Yeni Kategori Ekle</a></td>

